<Window x:Class="Project1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle x:Name="Rectangle" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="275,160,0,0" 
                   Stroke="Black" VerticalAlignment="Top" Width="244"/>
        <TextBox x:Name="heightBox" HorizontalAlignment="Left" Height="23" Margin="93,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="heightBox_TextChanged" PreviewTextInput="heightBox_PreviewTextInput"/>
        <Label x:Name="Height" Content="Height:" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top" Width="72" FontSize="16"/>
        <Label Content="Area:" HorizontalAlignment="Left" Margin="23,66,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="areaBox" HorizontalAlignment="Left" Height="23" Margin="93,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="areaBox_TextChanged" PreviewTextInput="areaBox_PreviewTextInput"/>

    </Grid>
</Window>
